<Page x:Class="PavelionsApp.Pages.AddTenantryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PavelionsApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddTenantryPage">

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <Border CornerRadius="5" BorderThickness="2" BorderBrush="DarkGray" Width="300" Margin="0 5 0 5">
            <StackPanel Orientation="Vertical">
                <TextBox Style="{StaticResource txtEnter}" Tag="Введите название компании" Padding="5 0 0 0" x:Name="tntName"/>
                <TextBox Style="{StaticResource txtEnter}" Tag="Введите номер телефона" Padding="5 0 0 0" x:Name="tntPhone"/>
                <TextBox Style="{StaticResource txtEnter}" Tag="Введите адрес" Padding="5 0 0 0" x:Name="tntAddress"/>
                <Button Style="{StaticResource ControlButton}" Content="Добавить" Margin="0 20 0 0" Click="btnAddTenantry_Click"/>
                <TextBlock x:Name="errorTxt" FontSize="15" Margin="0 20 0 0" HorizontalAlignment="Center" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
        
    </ScrollViewer>
</Page>
